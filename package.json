{
  "name": "find-issue-by-title",
  "description": "Finds an issue by title, with some filtering options to reduce chance of hitting rate limit",
  "version": "1.0.1",
  "author": "benlei",
  "private": true,
  "homepage": "https://github.com/benlei/find-issue-by-title",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benlei/find-issue-by-title.git"
  },
  "bugs": {
    "url": "https://github.com/benlei/find-issue-by-title/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=21"
  },
  "type": "module",
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx vitest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx vitest --coverage",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "vitest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/core": "^5.2.0",
    "@octokit/plugin-retry": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vercel/ncc": "^0.38.2",
    "@vitest/coverage-v8": "^2.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  }
}
